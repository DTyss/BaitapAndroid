<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.danh.thlab05">

    <uses-permission android:name="android.permission.CALL_PHONE" />

    <uses-feature
        android:name="android.hardware.telephony"
        android:required="false" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.THLab05"
        tools:targetApi="31">

        <!-- MENU CHÍNH - LAUNCHER -->
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="THLab05 - Menu">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- BÀI TẬP 1: ANIMATION + RANDOM -->
        <activity
            android:name=".Baitap1Activity"
            android:exported="false"
            android:label="Bài 1 - Animation"
            android:parentActivityName=".MainActivity" />

        <!-- BÀI TẬP 2: QUICKCALL + ANIMATION -->
        <activity
            android:name=".Baitap2Activity"
            android:exported="false"
            android:label="Bài 2 - Quick Call"
            android:parentActivityName=".MainActivity" />


    </application>

</manifest>